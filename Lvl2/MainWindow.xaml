<Window x:Class="Lvl2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lvl2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Text="Логин" HorizontalAlignment="Center" Width="150" Height="20" Margin="0,-20,0,0" x:Name="Login"></TextBox>
        <TextBox Text="Пароль" HorizontalAlignment="Center" Width="150" Height="20" Margin="0,30,0,0" x:Name="Password"></TextBox>
        <Button Width="150" Height="20" Margin="0,90,0,0" Content="Вход" Click="Button_Click"></Button>
        <CheckBox Content="Проверять уровень доступа" HorizontalAlignment="Center" MaxWidth="250" Height="20" Margin="0,150,0,0" x:Name="CheckBox1"></CheckBox>
    </Grid>
</Window>
